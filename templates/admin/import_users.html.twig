{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/admin.css') }}">
{% endblock %}

{% block title %}{{ parent() }} • DashBoardAdmin • Importation de fichier{% endblock %}


{% block body %}
    {% include 'admin/partials/_header.html.twig' %}
    
    <div class="container">
        <h1 class="page-title">Importer des utilisateurs en masse par importation de fichier</h1>
        
        <div class="flash-messages">
            {% for message in app.flashes('success') %}
                <div class="flash-success">{{ message }}</div>
            {% endfor %}
        </div>
        
        <div class="import-section">
            <h2 class="import-title">Importer le fichier .csv</h2>
            <form class="import-form" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label class="form-label" for="csv-file">Fichier CSV</label>
                    <input type="file" id="csv-file" name="csv-file" class="form-control" accept=".csv">
                </div>
                <button type="submit" class="btn btn-primary">Importer</button>
            </form>
            
            <div class="format-info">
                <h3 class="format-title">Format du CSV attendu :</h3>
                <div class="format-example">
                    email,roles,password,pseudo,nom,prenom,<br>
                    test1@campus-eni.fr,ROLE_USER,test11,pseudo1,prenom1,nom1,4<br>
                    test2@campus-eni.fr,ROLE_ADMIN,test22,pseudo2,prenom2,nom2,5
                </div>
            </div>
        </div>
    </div>
{% endblock %}
