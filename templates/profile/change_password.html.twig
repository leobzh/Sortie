{# templates/profile/change_password.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Changer mon mot de passe{% endblock %}

{% block body %}
    <h1>Changer mon mot de passe</h1>

    {# Affichage des messages flash (erreurs ou succès) #}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {# Formulaire de changement de mot de passe #}
    <form method="post">
        {{ form_start(form) }}

        <div class="mb-3">
            {{ form_label(form.password) }}
            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.password) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.confirm_password) }}
            {{ form_widget(form.confirm_password, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.confirm_password) }}
        </div>

        <div class="mb-3">
            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>

        {{ form_end(form) }}
    </form>

    <br>
    <a href="{{ path('profile_index') }}" class="btn btn-secondary">Retour à mon profil</a>
{% endblock %}