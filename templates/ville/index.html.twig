{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/sortie.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/showVille.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
{% endblock %}

{% block title %}Ville index{% endblock %}

{% block body %}
    <div class="page-ville">
    <h1>Ville</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nom</th>
                <th>CodePostal</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ville in villes %}
            <tr>
                <td>{{ ville.nom }}</td>
                <td>{{ ville.codePostal }}</td>
                <td>
                    <div class="btn-container">
                        <a href="{{ path('app_ville_show', {'id': ville.id}) }}" class="btn-action"><i class="fas fa-eye"></i></a>
                        <a href="{{ path('app_ville_edit', {'id': ville.id}) }}" class="btn-action"><i class="fas fa-edit"></i></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

                <a href="{{ path('app_ville_new') }}"class="btn btn-success">Create new</a>

        </div>
{% endblock %}
