{% extends 'base.html.twig' %}

{% block title %}New Lieu{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Ajouter dans la section <head> de ton fichier HTML/Twig -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
{% endblock %}

{% block body %}
    <p></p>
    <div class="container">
        <div class="row">
            <!-- Formulaire -->
            <div class="col-md-6">
                <h1>Créer un nouveau lieu</h1>

                {{ form_start(form) }}
                {{ form_row(form.nom, { 'label': false }) }}

                <div>
                    {{ form_label(form.autocomplete, false) }}
                    {{ form_widget(form.autocomplete) }}
                </div>

                {{ form_row(form.rue, { 'label': false }) }}
                {{ form_row(form.latitude, { 'label': false }) }}
                {{ form_row(form.longitude, { 'label': false }) }}
                {{ form_row(form.ville_nom, { 'label': false }) }}
                {{ form_row(form.code_postal, { 'label': false }) }}

                <!-- Bouton Création sous la carte -->
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Je crée ce lieu !</button>
                </div>
                {{ form_end(form) }}
            </div>

            <!-- Carte Leaflet à droite -->
            <div class="col-md-6">
                <div id="map" style="height: 400px; width: 100%;"></div>
            </div>
        </div>
    </div>

    <a href="{{ path('app_lieu_index') }}">Back to list</a>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/autocomplete.js') }}"></script>
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
{% endblock %}
