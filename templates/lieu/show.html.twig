{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/lieu.css') }}">
{% endblock %}

{% block title %}Lieu{% endblock %}

{% block body %}
    <div class="container">
        <h1>Lieu</h1>
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ lieu.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ lieu.nom }}</td>
                </tr>
                <tr>
                    <th>Rue</th>
                    <td>{{ lieu.rue }}</td>
                </tr>
                <tr>
                    <th>Latitude</th>
                    <td>{{ lieu.latitude }}</td>
                </tr>
                <tr>
                    <th>Longitude</th>
                    <td>{{ lieu.longitude }}</td>
                </tr>
            </tbody>
        </table>
    <div class="action-links">
        <a href="{{ path('app_lieu_index') }}" class="btn btn-secondary">Back to list</a>
        <a href="{{ path('app_lieu_edit', {'id': lieu.id}) }}" class="btn btn-primary">Edit</a>
    </div>
    {{ include('lieu/_delete_form.html.twig') }}
    </div>
{% endblock %}
