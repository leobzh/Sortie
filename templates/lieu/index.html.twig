{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/lieu.css') }}">
{% endblock %}

{% block title %}Lieu index{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Liste des lieux</h1>
            <a href="{{ path('app_lieu_new') }}" class="btn btn-primary"><i class="fas fa-plus"></i> Ajouter un lieu</a>
        </div>
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Rue</th>
                        <th>Latitude</th>
                        <th>Longitude</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for lieu in lieus %}
                    <tr>
                        <td>{{ lieu.id }}</td>
                        <td>{{ lieu.nom }}</td>
                        <td>{{ lieu.rue }}</td>
                        <td>{{ lieu.latitude }}</td>
                        <td>{{ lieu.longitude }}</td>
                        <td>
                            <a href="{{ path('app_lieu_show', {'id': lieu.id}) }}" class="btn btn-secondary">Show</a>
                            <a href="{{ path('app_lieu_edit', {'id': lieu.id}) }}" class="btn btn-primary">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
