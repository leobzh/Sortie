{#
{{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
#}

<p></p>
<div class="container">
    <div class="row">
        <!-- Formulaire -->
        <div class="col-md-6">
            <h1>{{ form_title }}</h1>

            {{ form_start(form) }}
            {{ form_row(form.nom, { 'label': false }) }}

            <div>
                {{ form_label(form.autocomplete, false) }}
                {{ form_widget(form.autocomplete) }}
            </div>

            {{ form_row(form.rue, { 'label': false }) }}
            {{ form_row(form.latitude, { 'label': false }) }}
            {{ form_row(form.longitude, { 'label': false }) }}
            {{ form_row(form.ville_nom, { 'label': false }) }}
            {{ form_row(form.code_postal, { 'label': false }) }}

            <!-- Bouton Création sous la carte -->
            <div class="mt-3">
                <button type="submit" class="btn btn-primary btn-lg btn-block">{{ button_label }}</button>
            </div>
            {{ form_end(form) }}
        </div>

        <!-- Carte Leaflet à droite -->
        <div class="col-md-6">
            <div id="map" style="height: 400px; width: 100%;"></div>
        </div>
    </div>
</div>
