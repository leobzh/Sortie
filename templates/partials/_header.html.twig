{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/header-footer.css') }}">
{% endblock %}

{# header.html.twig #}
<header class="header">
    <div class="container">
        <div class="header-content">
            <a href="{{ path('app_main') }}" class="logo">
                <i class="fas fa-calendar-alt logo-icon"></i>
                <span class="logo-text">Sortie App</span>
            </a>

            <nav class="nav-menu" id="nav-menu">
                <a href="{{ path('app_main') }}" class="nav-link {% if app.request.attributes.get('_route') == 'app_main' %}active{% endif %}">Accueil</a>
                <a href="{{ path('app_sortie') }}" class="nav-link {% if app.request.attributes.get('_route') == 'app_sortie' %}active{% endif %}">Sorties</a>
                <a href="#" class="nav-link">Événements</a>
                <a href="#" class="nav-link">À propos</a>
                <a href="#" class="nav-link">Contact</a>
            </nav>

            <div class="user-menu">
                {% if app.user %}
                    <div class="user-avatar">
                        <i class="fas fa-user"></i>
                    </div>
                {% else %}
                    <a href="#" class="btn btn-outline">Connexion</a>
                    <a href="#" class="btn btn-primary">Inscription</a>
                {% endif %}
            </div>
        </div>
    </div>
</header>
