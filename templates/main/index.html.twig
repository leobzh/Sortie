{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/accueil.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/effectAccueil.js') }}"></script>
{% endblock %}

{% block body %}
<div class="container">
    <div class="header">
        <h1>Bienvenue sur Sortie App</h1>
        <p>Votre plateforme de gestion d'événements et de sorties</p>
    </div>
    
    <div class="card">
        <h2 class="card-title">À propos de Sortie App</h2>
        <div class="card-content">
            <p id="typing-text-1"></p>
        </div>
    </div>
    
    <div class="features">
        <div class="feature-card">
            <div class="feature-icon">📅</div>
            <h3 class="feature-title">Gestion d'événements</h3>
            <p id="typing-text-2" class="feature-description"></p>
        </div>
        
        <div class="feature-card">
            <div class="feature-icon">👥</div>
            <h3 class="feature-title">Invitations simplifiées</h3>
            <p id="typing-text-3" class="feature-description"></p>
        </div>
        
        <div class="feature-card">
            <div class="feature-icon">🗓️</div>
            <h3 class="feature-title">Calendrier intégré</h3>
            <p id="typing-text-4" class="feature-description"></p>
        </div>
    </div>
</div>

<div class="cta-section"></div>
{% endblock %}
